<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image_big_Activity">

    <ImageView
        android:id="@+id/image_big_view"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/image_big_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/image_big_back_btn"
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_orange_btn"
        android:fontFamily="@font/ko3"
        android:text="뒤로가기"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_big_view" />
</android.support.constraint.ConstraintLayout>