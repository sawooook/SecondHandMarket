<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_margin="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_gravity=""
                android:layout_height="145dp"
                android:orientation="vertical">

                <Space
                    android:layout_width="10dp"
                    android:layout_height="11dp" />

                <ImageView
                    android:id="@+id/FragmentOne_imageview"
                    android:layout_width="111dp"
                    android:layout_height="111dp"
                    android:src="@mipmap/ic_launcher_round" />


                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/FragmentOne_itemname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/ko3"
                    android:textColor="#2a2a2a"
                    android:layout_weight="2.5"
                    android:textSize="16dp"
                    android:gravity="center|left"
                    android:text="판매이름" />

                <TextView
                    android:id="@+id/FragmentOne_where"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textColor="#3b3b3b"
                    android:fontFamily="@font/ko1"
                    android:textSize="10dp"
                    android:gravity="center|left"
                    android:text="판매하는곳 위치" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/FragmentOne_sold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ko2"
                                android:text="판매가격"
                                android:textColor="#3b3b3b"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ko2"
                                android:text="원"
                                android:textColor="#3b3b3b"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#3b3b3b"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/ko2"
                            android:text="흥정여부" />

                        <CheckBox
                            android:id="@+id/checkBox3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView1540"
                            android:textSize="13dp"
                            android:textColor="#3b3b3b"
                            android:fontFamily="@font/ko2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나로부터 " />

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            />


                        <TextView
                            android:id="@+id/FragmentOne_soldperson"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="#3b3b3b"
                            android:textSize="13dp"
                            android:fontFamily="@font/ko2"
                            android:layout_height="match_parent"
                            android:text="떨어진위치" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:textColor="#3b3b3b"
                            android:fontFamily="@font/ko2"
                            android:layout_height="match_parent"
                            android:text="M" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:id="@+id/textView13540"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="#3b3b3b"
                            android:textSize="13dp"
                            android:text="떨어짐" />

                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>