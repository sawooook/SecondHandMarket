<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/buy_ing_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Space
                    android:layout_width="13dp"
                    android:layout_height="8dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="13dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:id="@+id/buy_ing_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="물건팔아요"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <Space
                    android:layout_width="13dp"
                    android:layout_height="8dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="13dp"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등록날짜:" />

                    <TextView
                        android:id="@+id/buy_ing_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/buy_ing_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/buy_ing_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/buy_ing_price"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/buy_ing_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/buy_ing_check"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>


</android.widget.LinearLayout>